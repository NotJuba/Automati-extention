{
  "name": "Instagram bot",
  "description": "Instgram bot to like stories and follow others",
  "version" : "1.0",
  "manifest_version": 3,
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup/popup.html"
    },
    "options_page" : "options/options.html",
    "content_scripts" : [
        {
            "matches" : ["<all_urls>"],
            "css": ["content-scripts/content-script.css"],
            "js" : ["content-scripts/content-script.js"]
        }
    ]
}
